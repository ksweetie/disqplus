{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "test-utils": ["utils/test-utils"]
    },
    "resolveJsonModule": true,
    "target": "esnext"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
